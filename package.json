{
  "name": "gitbranchcleaner",
  "displayName": "%extension.displayName%",
  "description": "%extension.description%",
  "version": "1.0.0",
  "publisher": "badfalcon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/badfalcon/gitbranchcleaner.git"
  },
  "homepage": "https://github.com/badfalcon/gitbranchcleaner#readme",
  "bugs": {
    "url": "https://github.com/badfalcon/gitbranchcleaner/issues"
  },
  "keywords": [
    "git",
    "branch",
    "cleaner",
    "cleanup",
    "dead",
    "stale",
    "scm",
    "source control"
  ],
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:gitbranchcleaner.openCleaner"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "gitbranchcleaner.openCleaner",
        "title": "%command.openCleaner.title%",
        "icon": "$(git-branch)"
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "gitBranchCleaner.baseBranch": {
          "type": "string",
          "default": "auto",
          "description": "%config.baseBranch.description%"
        },
        "gitBranchCleaner.protectedBranches": {
          "type": "array",
          "items": { "type": "string" },
          "default": ["main", "master", "develop"],
          "description": "%config.protectedBranches.description%"
        },
        "gitBranchCleaner.confirmBeforeDelete": {
          "type": "boolean",
          "default": true,
          "description": "%config.confirmBeforeDelete.description%"
        },
        "gitBranchCleaner.forceDeleteLocal": {
          "type": "boolean",
          "default": false,
          "description": "%config.forceDeleteLocal.description%"
        },
        "gitBranchCleaner.includeRemoteInDeadCleanup": {
          "type": "boolean",
          "default": false,
          "description": "%config.includeRemoteInDeadCleanup.description%"
        },
        "gitBranchCleaner.staleDays": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "description": "%config.staleDays.description%"
        },
        "gitBranchCleaner.autoFetchPrune": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoFetchPrune.description%"
        },
        "gitBranchCleaner.showStatusBadges": {
          "type": "boolean",
          "default": true,
          "description": "%config.showStatusBadges.description%"
        }
      }
    },
    "menus": {
      "scm/title": [
        {
          "command": "gitbranchcleaner.openCleaner",
          "group": "navigation@10",
          "when": "scmProvider == git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
